{
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es7",
      "dom"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}
